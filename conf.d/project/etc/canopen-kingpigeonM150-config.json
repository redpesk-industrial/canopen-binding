{
  "$schema": "http://iot.bzh/download/public/schema/json/ctl-schema.json",
  "metadata": {
    "uid": "canopen-svc",
    "version": "1.0",
    "api": "canopen",
    "info": "Meta inforamtions"
  },
  "plugins": [
    {
      "uid": "CANopen-binding-plugin",
      "info": "Plugin to handle user custom encoding/decoding",
      "spath": "package/lib/:./lib/plugins:./var",
      "libs": [
        "kingpigeon.ctlso"
      ]
    }
  ], 
  "canopen":{
    "uid": "CANopen_Master",
    "info": "CANopen Master",
    "uri" : "can0",
    "nodId": 1,
    "dcf": "kp2-master.dcf",
    "slaves": [
      {
        "uid": "slave2",
        "info": "CANopen slave 2",
        "nodId": 2,
        "onconf": [
          {
            "info": "Turn off analog input cyclic event",
            "register": "0x180205",
            "size" : 2,
            "data": 0
          },
          {
            "info": "Turn off TPDO 01 sync",
            "register": "0x180005",
            "size" : 2,
            "data": 0
          }
        ],
        "sensors": [
          {
            "uid": "DIN01",
            "info": "digital input register",
            "type": "RPDO",
            "format" : "kp_4-boolArray",
            "size" : 1,
            "register" : "0x600001"
          },
          {
            "uid": "DIN01_EVENT_TIMER",
            "info": "Register to set DIN01 cyclic event in ms (0 fo non)",
            "type": "SDO",
            "format" : "uint",
            "size" : 2,
            "register" : "0x180005"
          },
          {
            "uid": "DOUT01",
            "info": "digital output register",
            "type": "TPDO",
            "format" : "kp_4-boolArray",
            "size" : 1,
            "register" : "0x620001"
          },
          {
            "uid": "AIN01",
            "info": "Analog input register 01, contains 2 analog input of 16bit itch",
            "type": "RPDO",
            "format" : "kp_2-intArray",
            "size" : 4,
            "register" : "0x640101"
          },
          {
            "uid": "AIN02",
            "info": "Analog input register 02, contains 2 analog input of 16bit itch",
            "type": "RPDO",
            "format" : "kp_2-intArray",
            "size" : 4,
            "register" : "0x640102"
          }
        ]
      }
    ]
  }
}